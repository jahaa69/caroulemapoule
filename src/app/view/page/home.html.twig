<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8"/>
		<link rel="stylesheet" href="../css/index.css"/>
		<title>{{titlePage}}</title>
	</head>
	<body>
		<div class="page">
			<div class="header">
				<h1>{{title}}</h1>
				{% if isconnected == true %}
					<div class="caseLogin">
						<h3>bonjour</h3>
						<a href="/stop">logout</a>
					</div>
				{% else %}
					<div class="caseLogin">
						<a href="/login">login</a>
					</div>
					<div class="caseLogin">
						<a href="/register">register</a>
					</div>
				{% endif %}

			</div>
			<div class="content">
				{% for carItem in CarT[:3] %}
					<div class="case">
						<div class="image">
							<img src="{{ carItem.image }}" alt="voiture"/>
						</div>
						<div class="titre">
							<h2>{{ carItem.brand }}</h2>
						</div>
						<div class="prix">
							<h3>{{ carItem.price }}€</h3>
						</div>
						<div class="casetwolink">
							<div class="resume">
								<a href="/resume/{{ carItem.id }}">résumé</a>
							</div>
							<div class="order">
								<a href="/order">commander</a>
							</div>
						</div>
					</div>
				{% endfor %}
				<a href="/allCar">voir plus</a>
			</div>
			{% if isconnected == true %}
				<div class="userPage">
					<div class="caseprofil">
						<div class="test">
							<h1>{{userT.name}}</h1>

							<div class="infouser">
								<h3>nom : {{userT.lastname}}</h3>
								<h3>prenom : {{userT.name}}</h3>
								<h3>email : {{userT.email}}</h3>
								<h3>adresse : {{userT.email}}</h3>
								<h3>telephone : {{userT.phone}}</h3>
							</div>

						</div>
						<h3>{{userT.name}}</h3>
						<div class="caseLogout">
							<a href="/stop">logout</a>
						</div>
					</div>

				{% else %}
					<div class="caseLogin">
						<a href="/login">login</a>
					</div>
					<div class="caseLogin">
						<a href="/register">register</a>
					</div>
				</div>
			{% endif %}
		</body>
	</body>
</html>
